<h1>Javascript Items</h1>

<%= link_to 'Create New Item', new_portfolio_path if logged_in?(:site_admin) %>
<hr>

<br>
<br>
<% @javascript_portfolio_items.each do |portfolio_item| %>
	<%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %> </p>
	<%= link_to 'Edit', edit_portfolio_path(portfolio_item) if logged_in?(:site_admin) %>
	<br>
	<%= link_to 'Delete', portfolio_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
	<hr>
<% end %>