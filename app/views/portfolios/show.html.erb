<div class="container">
	<div class="row">
		<div class="col-md-7">
			<%= image_tag @portfolio_item.main_image %>
		</div>
		<div class="col-md-5">

			<h1><%= @portfolio_item.title %></h1>

			<em><%= @portfolio_item.subtitle %></em>

			<p><%= @portfolio_item.body %></p>

			<hr>

			<h3>Technologies Used:</h3>
			<ul>
				<% @portfolio_item.technologies.each do |t| %>
					<li>
						<%= t.name  %>
					</li>
					<% end %>
			</ul>

			<%= link_to 'Edit', edit_portfolio_path(@portfolio_item.id) if logged_in?(:site_admin) %>

			<%= link_to 'Delete', portfolio_path(@portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>

		</div>
	</div>
</div>