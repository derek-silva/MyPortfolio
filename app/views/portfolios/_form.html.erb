<%= form_with(model: @portfolio_item, local: true) do |form| %>
	<div class="row">
	  <% if @portfolio_item.errors.any? %>
			<div id="error_explanation">
				<h2><%= pluralize(@portfolio_item.errors.count, "error") %> prohibited this @portfolio_item from being saved:</h2>

				<ul>
				<% @portfolio_item.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
				</ul>
			</div>
  	<% end %>
		<div class="col-md-6">
		  <div class="form-group">
				<%= form.label :title %>
				<%= form.text_field :title, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= form.label :subtitle %>
				<%= form.text_field :subtitle, class: "form-control" %>
			</div>
		</div>
		<div class="col-md-6">
		  <div class="form-group">
				<%= form.label :body %>
				<%= form.text_area :body, class: "form-control", rows: 13 %>
			</div>
		</div>
	</div>

	<hr>
			<h2>Technologies Used:</h2>

			<div>
				<%= form.fields_for :technologies do |technology_form| %>
					<div class="form-group">
					<%= technology_form.text_field :name, class: "form-control" %>
					</div>
				<% end %>
			</div>
			
			<div class="form-group">
				<%= form.submit "Save Portfolio Item", class: "btn btn-primary btn-block" %>
			</div>

<% end %>